@import "_normalize"
@import "_setting"
@import "_global"
@import "_article"
@import "_mobile"

.container
  display: flex
  flex-wrap: wrap
  align-items: stretch
.bg--violet
  background-color: $violet
.box-intro
  min-height: 80vh
  display: flex
  flex-direction: column
  justify-content: center
  flex: 1 1 60%

  .box-intro__content
    max-width: 50vw
    margin-left: 10vw
    h1
      font-size: 72px
      color: white
    h3
      color: white
      font-weight: 300
      font-size: 24px
  .box-intro__logo
    background-color: white
    border-radius: 50%
    width: 32px
    height: 32px
    position: absolute
    top: 64
    left: 10vw

.box-ava
  background-color: $violet
  flex: 1 1 40%
  display: flex;
  justify-content: flex-end;
  img
    align-self: flex-end;
.box-nav
  background-color: $purple
  flex: 1 1 60%
  display: flex
  flex-direction: column
  justify-content: center
  min-height: 20vh
  nav
    margin-left: 10vw
    a
      display inline-block
      font-weight: normal
      line-height: 1.5
      transition: box-shadow 200ms ease;
      &:hover
        box-shadow: inset 0 -3px 0 white
  .oval
    margin-bottom: 32px
    margin-left: 10vw

  a
    font-size: 16px
    line-height: 2
    margin-right: 24px
    color: white

.box-article
  background-color: $pink
  flex: 0 1 40%
  display: flex;
  flex-direction: column
  justify-content: center
  padding-bottom: 40px

  h3 
    color: $dark
    margin: 40px 40px 32px
  .link-article a
    &:hover
      box-shadow: inset 0 -5px 0 white

.link-article
  display: block
  margin: 0 40px
  a
    transition: box-shadow 200ms ease;
    &:hover
      box-shadow: inset 0 -5px 0 $pink
  .link-article__date
  .link-article__title
    display: inline-block;
    line-height: 2
    color: $violet
  .link-article__date
    margin-right: 16px
    font-weight: normal
  .link-article__title
    font-weight: bold;

.oval
  width: 32px;
  height: 32px
  border-radius: 50%
  background-color: $violet
  display inline-block

.main-nav
  width: 100%
  display: flex;
  margin: 32px 0
  .main-nav__logo
    margin-right: 24px
  a
    font-size: 16px
    line-height: 32px
    margin-right: 24px
    color: $violet
    font-weight: normal

.layout-wrap
  border-left: 16px solid $purple
  min-height: 100vh
  display: flex
  justify-content: center
  padding: 0 32px 0 16px
  &:after
    content: ''
    position: absolute
    width: 16px
    height: 16px
    background-color: $pink
    top:0
    right: 0
.layout-inner
  max-width: 720px
  width: 100%
  display: flex
  flex-direction: column

.btn
  padding: 6px 16px
  font-weight: normal
  display inline-block
.btn--primary
  background-color: $violet
  box-shadow: 0 4px 0 0 darken($violet, 20%)
  color: white
  transition: background 200ms ease;
  &:hover
    background-color: darken($violet, 20%)
.btn--secondary
  background-color: white
  border: 1px solid $violet
  box-shadow: 0 4px 0 0 darken($violet, 20%)
  color: #4a4a4a
  transition: background 200ms ease;
  &:hover
    background-color: $violet
    color: white


.list-articles .link-article
  margin: 0 0 24px

.list-articles
.post
  flex-grow: 1

.footer
  padding: 32px 0
.post-share
  padding: 16px 0
  .btn
    margin: 8px

.pagination
.post-share
  a
    margin-right: 16px
