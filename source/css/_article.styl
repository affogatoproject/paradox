.post
  .post__title
    color: $purple
    font-family: $sourceSansPro
    margin-bottom: 8px
  .post__author
    padding-bottom: 32px
  .post__content
    font-size: 21px
    font-family: $lora
    color: $violet
    p
      margin-bottom: 32px
    h1, h2, h3, h4, h5, h6
      font-family: $sourceSansPro
      color: $purple
      margin-bottom: 16px
    blockquote
      font-size: 32px
      font-style: italic
      font-family: $sourceSansPro
      font-weight: bold
    a
      font-weight: normal
      box-shadow: inset 0 -2px 0 $pink
    h5, h6
      font-size: 16px
      font-style: italic
      text-align: center
      margin-bottom: 32px
    h3, h4
      font-size: 24px
      font-weight: bold
    img
      display: block
      margin: 0 auto
    ul
      -webkit-padding-start: 32px
    table
      margin: 32px
      widow: 100%
      overflow: auto
      display: block
      border-spacing: 0
      border-collapse: collapse
      td, th
        text-align: left 
        padding: 8px
        border: 1px solid lighten($dark, 80%)
        font-size: 21px
      tr:nth-child(even)
        background-color: lighten($dark, 90%)
    figure.highlight 
      margin: 0
      .gutter
        background-color: lighten($dark, 90%)
      .code
        width: 100%
        background-color: lighten($dark, 95%)
        font-family: $sourceSansPro
  .post__categories
  .post__tags
    padding: 16px 0
  .post__comments
    padding: 32px 0
